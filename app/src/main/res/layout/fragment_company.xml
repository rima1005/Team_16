<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CompanyFragment"
    android:id="@+id/flFragmentCompany">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAddWorker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5pt"
            android:background="#168AAD"
            android:fontFamily="sans-serif-light"
            android:text="@string/add_worker"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            app:backgroundTint="#168AAD" />

        <Button
            android:id="@+id/btnCreateCompanyFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5pt"
            android:background="#168AAD"
            android:fontFamily="sans-serif-light"
            android:text="@string/create_company"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            app:backgroundTint="#168AAD" />
    </LinearLayout>
</FrameLayout>